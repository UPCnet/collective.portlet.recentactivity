<dl class="portlet portletRecent"
    i18n:domain="plone">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <a href="#" 
            tal:attributes="href view/recently_modified_link"
            i18n:translate="box_recent_changes">Recent Activity</a>
        <span class="portletTopRight"></span>
    </dt>

    <tal:items tal:define="plone_view context/@@plone;
                           getIcon nocall:plone_view/getIcon;
                           normalizeString nocall:plone_view/normalizeString;
                           toLocalizedTime nocall:plone_view/toLocalizedTime;"
               tal:repeat="activity_tuple view/recent_activities">

        <dd class="portletItem"
            tal:define="activity python:activity_tuple[1];
                        oddrow repeat/activity_tuple/odd;
                        item_icon python:getIcon(activity);"
            tal:attributes="class python:oddrow and  'portletItem even' or 'portletItem odd'">
            User <span tal:replace="activity/user" />
            <span tal:content="activity/action" />
            <span tal:content="python:activity['object'].title" />
            to
            <span tal:content="python:activity['parent'].title" />
            <!--
            <a href=""
               tal:attributes="href string:${activity}/view;
                               title string:;
                               class string:tile">
                <img tal:replace="structure item_icon/html_tag" />
                <tal:title content="activity/pretty_title_or_id">
                    Title
                </tal:title>
                <span class="portletItemDetails"
                      tal:content="python:toLocalizedTime(activity.ModificationDate)"
                      >May 5</span>
            </a>-->
        </dd>
    </tal:items>

    <dd class="portletItem"
        tal:condition="not: view/recent_activities"
        i18n:translate="box_recent_no_items">
        No items changed yet.
    </dd>

    <dd class="portletFooter">
        <a href="#"
           class="tile"
           tal:attributes="href view/recently_modified_link"
           i18n:translate="box_more_recently_changed">
           All recent changes&hellip;
        </a>
        <span class="portletBottomLeft"></span>
        <span class="portletBottomRight"></span>
    </dd>

</dl>

